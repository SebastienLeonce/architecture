{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "baseUrl": ".",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "typeRoots": [ "@types", "./node_modules/@types" ],
        "paths": {
           "@models/*": ["./models/*"],
           "@shared/*": ["./shared/*"],
           "@services/*": ["./services/*"],
           "@utils/*": ["./utils/*"]
        }
    },
    "exclude" : [ 
        "./build", 
        "./node_modules"
    ] 
}