{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "baseUrl": ".",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "typeRoots": [ "@types", "../../node_modules/@types" ],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "paths": {
           "@models/*": ["./src/models/*"],
           "@shared/*": ["./src/shared/*"],
           "@services/*": ["./src/services/*"],
           "@utils/*": ["./src/utils/*"],
           "@middlewares/*": ["./src/middlewares/*"],
           "@docs/*": ["./src/docs/*"],
           "@/*": ["./*"]
        }
    },
    "exclude" : [ 
        "./build", 
        "./node_modules"
    ] 
}